<div id="app">
  <nav class="navbar">
    <div class="navbar-brand">
      <%= link_to root_path, class: "navbar-item" do %>
        <h1 class="title is-4" style="font-family: Georgia;">Dental Lab Order</h1>
      <% end %>
        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarExampleTransparentExample" @click="isOpen = !isOpen" v-bind:class="{'is-active': isOpen}">  <!-- 変更する行 -->
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
    </div>

    <% if logged_in? %>
      <div id="navbarExampleTransparentExample" class="navbar-menu" v-bind:class="{'is-active': isOpen}">
        <div class="navbar-end" class="navbar-menu">
          <div class="navbar-item" style="font-family: Georgia;">
            
              <p class="control">
                <%= link_to "TOP", root_path, :style=>"color:#887938;", class: "has-text-grey-darker" %>
              </p>
              <% if current_user.admin? %>
                <p class="control">
                  <%= link_to "歯科医院一覧", users_path, :style=>"color:#887938;", class: "has-text-grey-darker" %>
                </p>
              <% else %>  
                <p class="control">
                  <%= link_to "指示書作成", new_user_order_path(current_user), :style=>"color:#887938;", class: "has-text-grey-darker" %>
                </p>
                <p class="control">
                  <%= link_to "指示書一覧", '#', :style=>"color:#887938;", class: "has-text-grey-darker" %>
                </p>
              <% end %>  
              <div class="dropdown is-hoverable" aria-controls="dropdown-menu">
                <div class="dropdown-trigger">
                  <p class="control has-text-grey-darker" aria-haspopup="true" aria-controls="dropdown-menu"><span>アカウント</span>
                  <span class="icon is-small">
                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                  </span>
                  <div class="dropdown-menu" id="dropdown-menu" role="menu">
                    <div class="dropdown-content">
                      <%= link_to "マイページ", user_path(current_user), :style=>"color:#887938;", class: "has-text-grey-darker dropdown-item" %>
                      <%= link_to "編集", edit_user_path(current_user), :style=>"color:#887938;", class: "has-text-grey-darker dropdown-item" %>
                    <hr class="dropdown-divider">
                      <%= link_to "ログアウト", logout_path, method: :delete, :style=>"color:#887938;", class: "has-text-grey-darker dropdown-item" %>
                    </div>  
                  </div>
                  </p>
                </div>  
              </div>
          </div>
        </div>
      </div>
    <% else %>
      <div id="navbarExampleTransparentExample" class="navbar-menu" v-bind:class="{'is-active': isOpen}">
        <div class="navbar-end">
          <div class="navbar-item" style="font-family: Georgia;">
            <p class="control">
              <%= link_to "TOP", root_path, :style=>"color:#887938;", class: "has-text-grey-darker" %>
            </p>
            <p class="control">
              <%= link_to "ログイン", login_path, :style=>"color:#887938;", class: "has-text-grey-darker" %>
            </p>
            <p class="control">
              <%= link_to "新規登録", new_user_path, :style=>"color:#887938;", class: "has-text-grey-darker" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </nav>
</div>
    
    <script>
    var app = new Vue({
        el: '#app',
        data: {
            isOpen: false
        }
    })
    </script>