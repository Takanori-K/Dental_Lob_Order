<% provide(:title, 'Order_up') %>
<section class="hero is-info is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-centered">
        指示書作成
      </h1>
    </div>
  </div>
</section>
<%= form_with(model: @order, url: user_orders_path(@user), local: true) do |f| %>
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-10">
         <div class="table-container">
           <table class="table is-bordered is-hoverable is-fullwidth" id="order-table">
             <tr>
               <th>技工所名</th>
               <th colspan = "5">
                 デンタルラボラトリー
               </th>
               <th colspan = "4">口腔内写真</th>
             </tr>
             <tr>
               <th>医院名</th>
               <td colspan = "5">
                 <%= current_user.name %>&ensp;様
               </td>
               <td colspan = "2" rowspan = "5"></td>
               <td colspan = "2" rowspan = "5"></td>
             </tr>
             <tr>
               <th>患者名</th>
               <td>
                 <%= f.text_field :patient_name, class: "input" %>
               </td>
               <th>性別</th>
               <td>
                 <%= f.select :sex, [['男', 1], ['女', 2]], { include_blank: true }, class: "select" %>
               </td>
               <th>シェード</th>
               <td>
                
               </td>
             </tr>
             <tr>
               <th colspan = "6">
                 ・部位 ・備考
               </th>
             </tr>
             <tr>
               <td colspan = "6"></td>
             </tr>
             <tr>
               <th colspan = "6">
                 注文内容
               </th>
             </tr>
             <tr>
               <td colspan = "6"></td>
               <th>試適１</th>
               <th>試適２</th>
               <th>完成日</th>
               <th>完了㊞</th>
             </tr>
             <tr>
               <th>単冠 or 連結</th>
               <td></td>
               <th>使用金属</th>
               <td></td>
               <th>グラム</th>
               <td></td>
               <td></td>
               <td></td>
               <td></td>
               <td></td>
             </tr>
           </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>