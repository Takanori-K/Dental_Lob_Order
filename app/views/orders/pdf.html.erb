<% provide(:title, 'Order_PDF') %>

<section class="section">
  <h1 class="title has-text-centered">
    歯科技工指示書
  </h1>
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <div class="table-container">
          <div class="has-text-right">
            <%= l(@order.reception_date, format: :middle) %>
          </div>
          <table class="table is-bordered is-hoverable is-fullwidth" id="pdf-table">
            <tr>
              <th colspan = "4">T-セラミックス</th>
              <td colspan = "3" rowspan = "10"><ul class="order-pdf"></ul></td>
            </tr>
            <tr>
              <th>医院名</th>
              <td colspan = "3"><%= @user.name %>&ensp;様</td>
            </tr>
            <tr>
              <th>患者名</th>
              <td colspan = "2"><%= @order.patient_name %>&ensp;様</td>
              <td><%= @order.sex %></td>
            </tr>
            <tr>
              <th>シェード</th>
              <td><%= @order.color %></td>
              <td colspan = "2"></td>
            </tr>
            <tr>
              <th colspan = "4">部位 ・注意事項</th>
            </tr>
            <tr>
              <td colspan = "4" rowspan = "3"><%= @order.note %></td>
            </tr>
            <tr></tr>
            <tr></tr>
            <tr></tr>
            <tr>
              <th colspan = "4">注文内容</th>
            </tr>
            <tr>
              <td colspan = "4"><%= @order.content %>&emsp;<%= @order.other_text %></td>
              <th>試適１</th>
              <th>試適２</th>
              <th>完成日</th>
            </tr>
            <tr>
              <th>使用金属</th>
              <td><%= @order.metal %></td>
              <th>金属量</th>
              <td><%= @order.weight %></td>
              <td><%= l(@order.first_try) if @order.first_try.present? %></td>
              <td><%= l(@order.second_try) if @order.second_try.present? %></td>
              <td><%= l(@order.complete_day) if @order.complete_day.present? %></td>
            </tr>
            
          </table>  
        </div>  
      </div>
    </div>    
  </div>  
</section>  