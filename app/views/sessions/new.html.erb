<% provide(:title, "login") %>
<ul class="image-login-new">
</ul>
<section class="section is-small">
  <div class="hero-body">
    <div class="container">
      <div class="title has-text-centered title-layout">
        ログイン画面
      </div>
    </div>
  </div>
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

          <div class="field">
            <%= f.label :email, "メールアドレス",  class: "label label-color" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => " \uf0e0 email", class: "fa input is-info" %>
          </div><br>

          <div class="field">
            <%= f.label :password, "パスワード", class: "label label-color" %>
            <%= f.password_field :password, :placeholder => " \uf023 password", class: "fa input is-info" %>
          </div><br>

          <div class="field">
            <%= f.label :remember_me, class: "checkbox is-left is-info", for: "remember-me" do %>
              <%= f.check_box :remember_me, id: "remember-me" %>
              <font color="white"><span class="sub-info">ログイン情報を記憶する</span></font>
            <% end %>
          </div><br>

          <div class="actions">
            <%= f.submit "ログイン", :style=>"background: #67c5ff; color: white;", class: "button has-text-weight-semibold" %>
          </div><br>
        <% end %>

        <p>
          <%= link_to '/auth/facebook', class: "button is-link has-text-weight-semibold" do %>
            <span class="icon">
              <i class="fab fa-facebook"></i>
            </span>
            <span>
              Facebookアカウントでログイン
            </span>
          <% end %>
        </p></br>
        <P>
          <%= link_to '/auth/line', class: "button is-success has-text-weight-semibold" do %>
            <span class="icon">
              <i class="fab fa-line"></i>
            </span>
            <span>
              LINEアカウントでログイン
            </span>
          <% end %>
        </P><br>
        <p class="is-size-4 has-text-weight-semibold">
          <font color="white">ユーザー登録がまだの場合は</font><%= link_to new_user_path, :style=>"background: #32CD32;  color: white;", class: "button" do %>
            <span class="icon">
              <i class="fa fa-chevron-right"></i>
            </span>
            <span>
              こちら
            </span>
          <% end %>
        </p>

      </div>
    </div>
  </div>
</section>
