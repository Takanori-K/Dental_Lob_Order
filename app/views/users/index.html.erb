<section class="hero is-small is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-centered">
        歯科医院一覧
      </h1>
    </div>
  </div>
</section>
<div class="paginate columns is-multiline">
  <%= will_paginate @collection, renderer: BulmaPagination::Rails %>
</div>
<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @users.each do |user| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-content">
              <div class="card-image">
                <% if user.image.present? %>
                  <figure class="image">
                    <%= image_tag user.image.thumb.url %>
                  </figure>
                <% else %>
                  <figure class="image">
                    <%= image_tag "/user_images/no-image-2.png" %>
                  </figure>
                <% end %>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="title padding-top: 20px;"><%=link_to user.name, user_path(user), :style => "font-size:20px;" %></div>
                </div>
              </div>
              <% if current_user.admin? %>
                <%= link_to "削除", user, method: :delete,
                  data: { confirm: "削除してよろしいですか？" },
                  class: "button is-danger" %>
              <% end %>    
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<div class="paginate columns is-multiline">
  <%= will_paginate @collection, renderer: BulmaPagination::Rails %>
</div>