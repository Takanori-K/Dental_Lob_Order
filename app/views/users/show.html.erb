<% provide(:title, @user.name) %>
<section class="hero is-small">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-centered">
        <font color="white">マイページ</font>
      </h1>
    </div>
  </div>
</section>

<ul class="user-show"></ul>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <div class="columns is-centered">
          <div class="column is-4" id="show-image">
            <% if @user.image.present? %>
              <figure class="image-tag">
                <%= image_tag @user.image.thumb.url, size: "200x200" %>
              </figure>
            <% else %>
              <figure class="image-tag">
                <%= image_tag "/user_images/no-image-2.png", size: "120x120" %>
              </figure>
            <% end %>
          </div>
          <div class="column is-10">
            <table class="table is-fullwidth" id="user-show-table">
              <tr>
                <td class="is-size-5">
                  <strong>医院名</strong>
                </td>
                <td class="is-size-5">
                  <strong>メールアドレス</strong>
                </td>
                <td class="is-size-5">

                </td>
              </tr>
              <tr></tr>
              <tr>
                <td class="is-size-5">
                  <%= @user.name %>
                </td>
                <td class="is-size-5">
                  <%= @user.email %>
                </td>
                <td class="has-text-weight-semibold">
                  <%= link_to edit_user_path(@user), class: "button is-primary" do %>
                    <span class="icon">
                      <i class="fas fa-user-edit"></i>
                    </span>
                    <span>
                      編集
                    </span>
                  <% end %>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <div class="columns is-centered">
    <div class="buttons are-medium" id="item-layout">
      <% if current_user?(@user) && !current_user.admin? %>
        <div class="button-new">
         <%= link_to new_user_order_path(@user), class: "button is-warning show-new-order", :style=>"width:120%;" do %>
           <span class="icon">
             <i class="far fa-edit"></i>
           </span>
           <span>
             指示書作成
           </span>
         <% end %>
        </div>

        <div class="button-index">
          <%= link_to user_orders_path(@user), class: "button is-info show-index-order" do %>
            <span class="icon">
              <i class="far fa-list-alt"></i>
            </span>
            <span>
              指示書一覧 (完)
            </span>
          <% end %>
        </div>
      <% end %>
      <h2 class="title-order has-text-centered is-3" id="open">
      <% if current_user.admin? && current_user?(@user) %>
        <font color="white">
          <span class="icon">
            <i class="far fa-list-alt"></i>
          </span>&nbsp;
          <span>
            新着技工物
          </span>
        </font>
        <% if @notification_info.present? %>
          <a class="button is-rounded is-danger is-small "><span class="icon"><i class="fas fa-bell"></i></span><span><%= @notification %></span></a>&emsp;
        <% end %>
      <% elsif current_user?(@user) %>
        <button class="button is-medium is-success" id="show-order-button">
          <span class="icon">
            <i class="far fa-list-alt"></i>
          </span>
          <span>申請中の技工物</span>
        </button>
      <% end %>
      </h2>
      <h2 class="title-order has-text-centered is-3">
        <% if current_user.admin? && current_user?(@user) %>
          <%= link_to  users_path, :style=>"color:white;" do %>
            <span class="icon">
              <i class="fas fa-users"></i>
            </span>&nbsp;
              <span>歯科医院一覧</span>
          <% end %>
        <% elsif current_user.admin? && !current_user?(@user) %>
          <%= link_to  users_path, class: "button" do %>
            <span class="icon">
              <i class="fas fa-users"></i>
            </span>&nbsp;
              <span>歯科医院一覧</span>
          <% end %>
        <% end %>

      </h2>
    </div>
  </div>
</div><br><br>

<section>
  <div class="container">
    <div class="columns is-centered" id="calendar-layout">
      <div class="column is-12">
        <% if current_user.admin? && current_user?(@user) %>
          <%= month_calendar(attribute: :reception_date, events: @calendar_orders) do |date, orders| %>
            <%= l(date, format: :short) %>
            <% orders.each do |order| %>
              <% if order.finished.blank? || order.finished == "false" %>
                <div class="is-size-7">
                  <button class="button is-danger is-small" style="font-size:1px;width:25px;height:15px">NEW</button>
                  <%= link_to order.patient_name, user_order_path(order.user, order), :style=>"color:green;" %>
                </div>
              <% else %>
                <div class="is-size-7">
                  <button class="button is-info is-small has-text-weight-semibold" style="font-size:1px;width:25px;height:15px">完</button>&thinsp;
                  <%= link_to order.patient_name, user_order_path(order.user, order), :style=>"color:black;" %>
                </div>
              <% end %>
            <% end %>
          <% end %>
        <% elsif current_user?(@user) %>
          <%= month_calendar(attribute: :reception_date, events: @orders) do |date, orders| %>
            <%= l(date, format: :short) %>
            <% orders.each do |order| %>
              <% if order.finished.blank? || order.finished == "false" %>
                <div class="is-size-7">
                  <button class="button is-success is-small has-text-weight-semibold" style="font-size:1px;width:25px;height:15px">申請</button>&thinsp;
                  <%= link_to order.patient_name, user_order_path(@user, order), :style=>"color:green;" %>
                </div>
              <% else %>
                <div class="is-size-7">
                  <button class="button is-info is-small has-text-weight-semibold" style="font-size:1px;width:25px;height:15px">完</button>&thinsp;
                  <%= link_to order.patient_name, user_order_path(@user, order), :style=>"color:black;" %>
                </div>
              <% end %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section><br>

<section>
</section>

<div class="modal">
  <div class="modal-background"></div>
    <div class="modal-card">
      <header class="modal-card-head">
        <% if current_user.admin? %>
          <p class="modal-card-title has-text-centered has-text-weight-semibold">新着技工物</p>
        <% else %>
          <p class="modal-card-title has-text-centered has-text-weight-semibold">申請中の技工物</p>
        <% end %>
        <button class="delete is-large" aria-label="close" id="close"></button>
      </header>
      <section class="modal-card-body">
        <div class="columns is-centered">
          <div class="table-container">
            <% if current_user.admin? %>
              <% @users.each do |user| %>
                <% new_orders = Order.where(user_id: user.id, finished: [nil, "false"]) %>
                <% if new_orders.present? %>
                  <div class="is-size-5 has-text-weight-semibold">
                    【<%= user.name %>】
                  </div>
                  <table class="table is-bordered is-hoverable is-fullwidth" id="order-show-table">
                    <thead>
                      <tr>
                        <th class="is-size-5">詳細</th>
                        <th class="is-size-5">受付日</th>
                        <th class="is-size-5">患者名</th>
                        <th class="is-size-5">試適1</th>
                        <th class="is-size-5">試適2</th>
                        <th class="is-size-5">完成日</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% new_order = Order.where(user_id: user.id) %>
                      <% new_order.each do |order| %>
                        <% if order.finished.blank? || order.finished == "false" %>
                          <tr>
                            <td>
                              <%= link_to user_order_path(user, order), class: "button is-info" do %>
                                <i class="fas fa-teeth-open"></i>
                              <% end %>
                            </td>
                            <td class="show-td">
                              <%= l(order.reception_date, format: :long) if order.reception_date.present? %>
                            </td>
                            <td class="show-td">
                              <%= order.patient_name %>
                            </td>
                            <td class="show-td">
                              <%= l(order.first_try, format: :short) if order.first_try.present? %>
                            </td>
                            <td class="show-td">
                              <%= l(order.second_try, format: :short) if order.second_try.present? %>
                            </td>
                            <td class="show-td">
                              <%= l(order.complete_day, format: :short) if order.complete_day.present? %>
                            </td>
                            <td><%= link_to "削除", user_order_path(user, order)	,  method: :delete,
                                  data: { confirm: "削除してよろしいですか？" }, class: "button is-danger" %>
                            </td>
                          </tr>
                        <% end %>
                      <% end %>
                    </tbody>
                  </table>
                <% end %>
              <% end %>
            <% else %>
              <table class="table is-bordered is-hoverable is-fullwidth" id="order-show-table">
                  <thead>
                    <tr>
                      <th class="is-size-5">詳細</th>
                      <th class="is-size-5">受付日</th>
                      <th class="is-size-5">患者名</th>
                      <th class="is-size-5">試適1</th>
                      <th class="is-size-5">試適2</th>
                      <th class="is-size-5">完成日</th>
                      <th colspan = "2"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @orders.each do |order| %>
                      <% if order.finished.blank? && order.finished = "false" %>
                        <tr>
                          <td>
                            <%= link_to user_order_path(@user, order), class: "button is-info" do %>
                              <i class="fas fa-teeth-open"></i>
                            <% end %>
                          </td>
                          <td class="show-td">
                            <%= l(order.reception_date, format: :long) %>
                          </td>
                          <td class="show-td">
                            <%= order.patient_name %>
                          </td>
                          <td class="show-td">
                            <%= l(order.first_try, format: :short) if order.first_try.present? %>
                          </td>
                          <td class="show-td">
                            <%= l(order.second_try, format: :short) if order.second_try.present? %>
                          </td>
                          <td class="show-td">
                            <%= l(order.complete_day, format: :short) if order.complete_day.present? %>
                          </td>
                          <td><%= link_to "編集", edit_user_order_path(@user, order), class: "button is-primary" %></td>
                          <td><%= link_to "削除", user_order_path(@user, order)	,  method: :delete,
                                data: { confirm: "削除してよろしいですか？" }, class: "button is-danger" %>
                          </td>
                        </tr>
                      <% end %>
                    <% end %>
                  </tbody>
                </table>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>



<script>
  $(document).ready(function() {
    $("#open").on("click", function() {
      $("div.modal").addClass("is-active");
    })

    $("#close, div.modal-background").on("click", function() {
      $("div.modal").removeClass("is-active");
    })
  });
</script>
