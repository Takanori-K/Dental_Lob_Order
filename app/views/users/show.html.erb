<% provide(:title, @user.name) %>
<section class="hero is-small is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-centered">
        マイページ
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-8">
        <div class="columns is-centered">
          <div class="column is-4">
            <% if @user.image.present? %>
              <figure class="image-tag">
                <%= image_tag @user.image.thumb.url, size: "200x200" %>
              </figure>
            <% else %>
              <figure class="image-tag">
                <%= image_tag "/user_images/no-image-2.png", size: "120x120" %>
              </figure>
            <% end %>
          </div>
          <div class="column is-10">
            <table class="table is-fullwidth">
              <tr>
                <td class="is-size-5">
                  <strong>医院名</strong>
                </td>
                <td class="is-size-5">
                  <strong>メールアドレス</strong>
                </td>
                <td class="is-size-5">
                  
                </td>
              </tr>
              <tr></tr>
              <tr>
                <td class="is-size-5">
                  <%= @user.name %>
                </td>
                <% if @user.id == current_user.id %>
                <td class="is-size-5">
                  <%= @user.email %>
                </td>
                <td>
                    <%= link_to "編集", edit_user_path(current_user), class: "button is-primary" %>
                </td>
                <% end %>
              </tr>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <div class="columns is-centered">
    <div class="buttons are-medium">
      <% unless current_user.admin? %>
        <div class="button-new">
         <button class="button is-warning" id="open">指示書新規作成</button>
        </div>
        
        <div class="modal">
          <div class="modal-background"></div>
            <div class="modal-card">
              <header class="modal-card-head">
                <p class="modal-card-title">モーダルウィンドウ</p>
                <button class="delete" aria-label="close" id="close"></button>
              </header>
              <section class="modal-card-body">
                コンテンツ欄
              </section>
              <footer class="modal-card-foot">
                <button class="button is-success"><a href=#>リンク</a></button>
              </footer>
            </div>
          </div>
          
        <div class="button-index">
          <%= link_to "指示書一覧（完）", '#', class: "button is-info" %>
        </div>
      <% end %>  
    </div>
  </div>
</div>
<section class="section">
  <div class="container">
    <h2 class="title-order has-text-centered is-3">
      申請中の技工物
    </h2>
    <div class="columns is-centered">
      <div class="table-container">
        <table class="table is-bordered is-hoverable is-fullwidth" id="order-table">
          <thead>
            <tr>
              <th class="is-size-5">日付</th>
              <th class="is-size-5">曜日</th>
              <th class="is-size-5">患者名</th>
              <th class="is-size-5">試適1</th>
              <th class="is-size-5">試適2</th>
              <th class="is-size-5">完成日</th>
              <% if current_user.admin? %>
                <th class="is-size-5">完成</th>
              <% end %>  
              <th colspan = "2"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <% if current_user.admin? %>
                <td></td>
              <% end %>  
              <td><%= link_to "編集", '#', class: "button is-primary" %></td>
              <td><%= link_to "削除", '#', method: :delete,
                  data: { confirm: "削除してよろしいですか？" },class: "button is-danger" %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<script>
  $(document).ready(function() {
    $("#open").on("click", function() {
      $("div.modal").addClass("is-active");
    })

    $("#close, div.modal-background").on("click", function() {
      $("div.modal").removeClass("is-active");
    })
  });
</script>